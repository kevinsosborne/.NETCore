<h1>Coding Dojo Wall</h1>
<p>Welcome @ViewBag.user_name</p>
<a href="/logout">Log off</a>

<h1>Post a message</h1>
<form action="/message" method="post">
<textarea name="message" id="" cols="55" rows="3"></textarea><br>
<input type="submit" value="Post a message">
</form>

@foreach(var message in @ViewBag.AllMessages)
{
    <p>@message["firstname"] @message["created_at"]</p>
    <p>@message["message"]</p>
        @foreach(var comment in @ViewBag.Comments)
        {
        @if(@comment["messages_id"] == @message["message_id"] )
        {
        <p>@comment["firstname"] @comment["created_at"]</p>
        <p>@comment["comment"]</p>
        }
        }
    <form action="/comment" method="post">
        <textarea name="comment" id="" cols="35" rows="2"></textarea>
        <input type="hidden" name="message_id" value="@message["message_id"]">
        <p><input type="submit" name="submit" value="Post a comment"></p>
    </form>
}

