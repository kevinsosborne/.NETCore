<h1>Plan Your Wedding</h1>

<a href="/logout">Logout</a>

<a href="/dashboard">Dashboard</a>

<div>
    @{
        foreach(var error in @ViewBag.PlanErrors)
        {
            if(@error.Errors.Count > 0)
            {
                <p style = "color: red;">@error.Errors[0].ErrorMessage</p>
            }
        }
    }
</div>


<div class="register">

    <form action="/planwed" method="post">
    <div class="form-group">
    <label for="WedderOne">Wedder One: </label>
    <input type="text" class="form-control" id="WedderOne" name="wedder_one">
    </div>
    <div class="form-group">
    <label for="WedderTwo">Wedder Two: </label>
    <input type="text" class="form-control" id="WedderTwo" name="wedder_two">
    </div>
    <div class="form-group">
    <label for="Date">Date:</label>
    <input type="date" class="form-control" id="date" name="date">
    </div>
    <div class="form-group">
    <label for="address">Wedding Address: </label>
    <input type="text" class="form-control" id="address" name="address">
    </div>
    <input type="submit" value="Create">
    </form>
</div>